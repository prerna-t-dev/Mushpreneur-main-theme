<section id="mush--about-founder">
    <div class="section-wrapper text-white relative pt-[50px] xl:pt-[200px]" style="background-color: {{ section.settings.background }};">
        <div class="text-white rounded-t-[26px] lg:rounded-t-[42px] xl:rounded-t-[96px] relative px-[26px] lg:px-12 xl:px-[140px] py-[30px] pb-0 lg:py-[60px] xl:py-[110px]" style="background: {{ section.settings.foreground }};">
            <div class="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-1/2  w-[100px] h-[100px] lg:w-[300px] lg:h-[150px] xl:w-[300px] xl:h-[300px] rounded-full overflow-hidden">
                <img src="{{ section.settings.image | image_url }}" alt="{{ section.settings.image.alt }}" class="w-full h-full object-cover">
            </div>

            <h2 class="text-2xl lg:text-[32px] xl:text-[48px] font-bold leading-tight mb-2 tracking-[-1px] lg:tracking-[-1.6px]">{{ section.settings.header }}</h2>

            <div class="text-base lg:text-[20px] xl:text-[28px] leading-tight mb-2 tracking-[-0.8px] lg:tracking-[-1px] xl:tracking-[-1.4px]">{{ section.settings.description | newline_to_br }}</div>

        </div>
    </div>
</section>

{% schema %}
    {
        "name": "About Founder",
        "settings": [
            {
                "type": "color",
                "id": "background",
                "label": "Background Color"
            },
            {
                "type": "color_background",
                "id": "foreground",
                "label": "Foreground Color"
            },
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "textarea",
                "id": "header",
                "label": "Header"
            },
            {
                "type": "richtext",
                "id": "description",
                "label": "Description"
            }
            
            
            
            
        ],
        "presets": [
            {
                "name": "About Founder"
            }
        ]
    }
{% endschema %}