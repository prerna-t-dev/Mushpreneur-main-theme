{% comment %}
  Day Shrooms Short Landing Page - Ingredients Section
{% endcomment %}

<style>
  .ds-slp-dayshroom-ingredients {
    background: {{ section.settings.background_color | default: '#FDF1E9' }};
  }
  
  .ds-slp-dayshroom-ingredients__quote {
    color: {{ section.settings.quote_color | default: '#000000' }};
    text-align: center;
    margin-bottom: 16px;
  }
  
  .ds-slp-dayshroom-ingredients__signature {
    color: {{ section.settings.signature_color | default: '#000000' }};
    text-align: center;
    font-family: 'Dancing Script', cursive;
    margin-bottom: 8px;
  }
  
  .ds-slp-dayshroom-ingredients__signature-image {
    width: 64px;
    height: auto;
    object-fit: contain;
    margin: 0 auto 8px;
    display: block;
  }
  
  .ds-slp-dayshroom-ingredients__founder-label {
    color: {{ section.settings.founder_label_color | default: '#FF3EAD' }};
    text-align: center;
    margin-bottom: 24px;
  }
  
  .ds-slp-dayshroom-ingredients__divider {
    width: 100%;
    height: 1px;
    background: #00000080;
    margin: 48px 0;
  }
  
  .ds-slp-dayshroom-ingredients__whats-inside {
    color: {{ section.settings.title_color | default: '#000000' }};
    text-align: center;
    margin-bottom: 48px;
  }
  
  .ds-slp-dayshroom-ingredients__ingredient-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
  
  .ds-slp-dayshroom-ingredients__ingredient-image {
    width: 100%;
    max-width: 120px;
    height: auto;
    object-fit: contain;
    margin-bottom: 24px;
  }
  
  @media (min-width: 1024px) {
    .ds-slp-dayshroom-ingredients__ingredient-image {
      max-width: 150px;
    }
  }
  
  .ds-slp-dayshroom-ingredients__ingredient-name {
    display: inline-block;
    background: #FFFFFF;
    border-radius: 50px;
    padding: 4px 20px;
    color: {{ section.settings.ingredient_name_color | default: '#000000' }};
    margin-bottom: 8px;
  }
  
  .ds-slp-dayshroom-ingredients__ingredient-benefit {
    color: {{ section.settings.ingredient_benefit_color | default: '#000000' }};
  }
</style>

<section class="ds-slp-dayshroom-ingredients" id="ds-slp--dayshroom-ingredients">
  <div class="mx-auto px-5 sm:px-6 lg:px-16 py-10 lg:pt-16 lg:pb-24">
      {% comment %} Quote Section {% endcomment %}
      {% if section.settings.show_quote %}
        <div class="ds-slp-dayshroom-ingredients__quote font-normal text-[40px] xl:text-[76px] xl:px-20 xl:w-4/5 mx-auto leading-tight tracking-[-2px] xl:tracking-[-3.8px] mb-4">
          “{{ section.settings.quote_text }}”
        </div>
        
        {% if section.settings.signature_image != blank %}
          <img 
            src="{{ section.settings.signature_image | image_url: width: 128 }}"
            alt="{{ section.settings.signature_text | default: 'Signature' | escape }}"
            class="ds-slp-dayshroom-ingredients__signature-image"
            width="64"
            height="auto"
            loading="lazy"
          >
        {% elsif section.settings.signature_text != blank %}
          <div class="ds-slp-dayshroom-ingredients__signature text-2xl lg:text-3xl mb-2" style="font-family: 'Dancing Script', cursive;">
            {{ section.settings.signature_text }}
          </div>
        {% endif %}
        
        {% if section.settings.founder_label != blank %}
          <div class="ds-slp-dayshroom-ingredients__founder-label font-bold text-base leading-loose tracking-[-0.8px] mb-6">
            {{ section.settings.founder_label }}
          </div>
        {% endif %}
        
        <div class="ds-slp-dayshroom-ingredients__divider">

        </div>
      {% endif %}
      
      {% comment %} What's Inside Section {% endcomment %}
      {% if section.settings.whats_inside_label != blank %}
        <h2 class="ds-slp-dayshroom-ingredients__whats-inside text-2xl lg:text-[32px] font-bold leading-tight tracking-[-1.2px] lg:tracking-[-1.6px]">
          {{ section.settings.whats_inside_label }}
        </h2>
      {% endif %}
      
      {% comment %} Ingredients Grid {% endcomment %}
      {% if section.blocks.size > 0 %}
        <div class="grid grid-cols-2 lg:grid-cols-5 gap-x-5 gap-y-10 lg:gap-x-5 lg:gap-y-10">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'ingredient' %}
                <div class="ds-slp-dayshroom-ingredients__ingredient-card {% if forloop.last %}col-span-2 lg:col-span-1{% endif %}" {{ block.shopify_attributes }}>
                  {% if block.settings.ingredient_image != blank %}
                    <img 
                      src="{{ block.settings.ingredient_image | image_url: width: 300 }}"
                      alt="{{ block.settings.title | default: 'Ingredient' | escape }}"
                      class="ds-slp-dayshroom-ingredients__ingredient-image"
                      width="300"
                      height="300"
                      loading="lazy"
                    >
                  {% endif %}
                  
                  {% if block.settings.title != blank %}
                    <h3 class="ds-slp-dayshroom-ingredients__ingredient-name text-base lg:text-lg font-bold tracking-[-0.8px] lg:tracking-[-0.9px] leading-[1.5]">
                      {{ block.settings.title }}
                    </h3>
                  {% endif %}
                  
                  {% if block.settings.ingredient_benefit != blank %}
                    <p class="ds-slp-dayshroom-ingredients__ingredient-benefit text-sm lg:text-base leading-relaxed tracking-[-0.7px] lg:tracking-[-0.8px]">
                      {{ block.settings.ingredient_benefit }}
                    </p>
                  {% endif %}
                </div>
            {% endcase %}
          {% endfor %}
        </div>


        {% if section.settings.more_ingredients_label != blank %}
          <p class="text-center text-base font-bold leading-loose tracking-[-0.8px]">
            {{ section.settings.more_ingredients_label }}
          </p>
        {% endif %}
      {% endif %}
  </div>
</section>

