<section id="mush--supercharged-ingredients" class="overflow-hidden">
    <div class="section-wrapper bg-black px-0 pt-[36px] xl:pt-[88px] pb-[108px] lg:pb-[236px] relative">

        <div class="text-white relative z-[10] {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in {% endif %}">
            <h3 class="text-white text-center font-bold text-2xl xl:text-[51.682px] tracking-[-1.2px] xl:tracking-[-2.584px] leading-[1.1] mb-3 px-6">
                <span class="ingredients-header-color tracking-[-1.2px] xl:tracking-[-2.584px]">Supercharged ingredients </span>
                for Mood, Energy & Focus
            </h3>
            <p class="w-2/3 mx-auto font-medium text-center text-sm xl:text-[30px] tracking-[-0.7px] xl:tracking-[-1.5px] px-4 xl:px-10 leading-[1.1]">
                We prioritize clean, natural ingredients. Day Shrooms harnesses the power of nature's finest ingredients to fuel your day.
            </p>


            <!-- Ingredients Slider -->
            <div class="swiper-container swiper-supercharged-ingredients relative w-full mt-[38px] xl:mt-[64px] z-[10]">
                <div class="swiper-wrapper slick--supercharged-ingredients relative">
                    {% for block in section.blocks %}
                        <div class="w-full h-full">
                    <div class="w-full h-full bg-white px-4 xl:px-7 py-4 xl:py-8 rounded-[20px] xl:rounded-[38px] cursor-pointer" {% if block.settings.image %} style="background-image: url({{ block.settings.image | img_url: 'master' }});background-repeat: no-repeat; background-size: contain; background-position: bottom right;" {% endif %}>
                                <div class="ingredient-header mb-1 xl:mb-3">
                                    <h4 class="font-bold text-[26px] xl:text-[46px] tracking-[-1.3px] xl:tracking-[-2.3px] leading-[1.1]">
                                        {{ block.settings.name | newline_to_br }}
                                    </h4>
                                </div>
                                
                                <p class="font-light text-[12px] xl:text-xl tracking-[-0.6px] xl:tracking-[-1px] leading-[1.1] text-black">
                                    {{ block.settings.description | newline_to_br }}
                                </p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>


           
        </div>


        <div class="absolute z-1 left-0 bottom-0 w-full overflow-hidden">
            <!-- Desktop SVG -->
            <svg class="w-full translate-y-[1px] h-auto hidden xl:block" xmlns="http://www.w3.org/2000/svg" width="1440" height="171" viewBox="0 0 1440 171" fill="none">
                <path d="M1091.25 122.201C793.5 98.0025 809.625 -26.6183 521.25 55.2522C232.875 137.123 0 55.2522 0 55.2522V171H1440V0C1440 0 1389 146.399 1091.25 122.201Z" fill="#E74639"/>
            </svg>
            <!-- Mobile SVG -->
            <svg class="w-full translate-y-[1px] h-auto xl:hidden" xmlns="http://www.w3.org/2000/svg" width="392" height="72" viewBox="0 0 392 72" fill="none">
                <path d="M296.482 52.1127C215.586 41.9558 219.967 -10.3524 141.618 24.0118C63.2694 58.3761 -0.000640869 24.0118 -0.000640869 24.0118V72.5958H391.234V0.820312C391.234 0.820312 377.378 62.2696 296.482 52.1127Z" fill="#E74639"/>
            </svg>
        </div>

    </div>

</section>

