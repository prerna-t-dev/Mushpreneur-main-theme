{% comment %}
  Day Shrooms Landing Page Product Info Box Section
{% endcomment %}

{%- liquid
  assign selected_product = section.settings.product
  if selected_product == blank
    assign selected_product = all_products[section.settings.product_handle]
  endif
  assign variant_images = selected_product.images | where: 'attached_to_variant?', true | map: 'src'
-%}

{{ 'section-main-product.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}
{{ 'component-rating.css' | asset_url | stylesheet_tag }}
{{ 'component-deferred-media.css' | asset_url | stylesheet_tag }}

{% unless selected_product.has_only_default_variant %}
  {{ 'component-product-variant-picker.css' | asset_url | stylesheet_tag }}
  {{ 'component-swatch-input.css' | asset_url | stylesheet_tag }}
  {{ 'component-swatch.css' | asset_url | stylesheet_tag }}
{% endunless %}

{% if selected_product.media.size > 0 %}
  <script src="{{ 'product-modal.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'media-gallery.js' | asset_url }}" defer="defer"></script>
{% endif %}

<style>
  .ds-lp-prod-info-box {
    background-color: #000000;
    color: #FFFFFF;
  }
  
  /* Ensure main gallery shows one image at a time */
  #ds-lp--prod-info-box .product__media-list {
    display: flex !important;
    overflow: hidden;
  }
  
  #ds-lp--prod-info-box .product__media-item {
    flex: 0 0 100%;
    width: 100%;
    display: none;
    border-radius: 20px;
    overflow: hidden;
  }
  
  #ds-lp--prod-info-box .product__media-item.is-active {
    display: block;
  }
  
  #ds-lp--prod-info-box .product__media img,
  #ds-lp--prod-info-box .product__media-wrapper img {
    border-radius: 20px;
  }
  
  /* Disable zoom feature */
  #ds-lp--prod-info-box .product__media-icon {
    display: none !important;
  }
  
  #ds-lp--prod-info-box .product__modal-opener {
    pointer-events: none;
    cursor: default !important;
  }
  
  #ds-lp--prod-info-box .product__media-wrapper {
    cursor: default !important;
  }
  
  #ds-lp--prod-info-box .product__media-wrapper:hover {
    transform: none !important;
  }
  
  /* Gallery Navigation Arrows */
  #ds-lp--prod-info-box .ds-lp-gallery-wrapper {
    position: relative;
  }
  
  #ds-lp--prod-info-box .ds-lp-gallery-arrow {
    position: absolute;
    top: 40%;
    transform: translateY(-50%);
    z-index: 10;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    opacity: 0.8;
    background: transparent;
    border: none;
    padding: 0;
  }
  
  #ds-lp--prod-info-box .ds-lp-gallery-arrow:hover {
    opacity: 1;
    transform: translateY(-50%) scale(1.05);
  }
  
  #ds-lp--prod-info-box .ds-lp-gallery-arrow:active {
    transform: translateY(-50%) scale(0.95);
  }
  
  #ds-lp--prod-info-box .ds-lp-gallery-arrow--prev {
    left: 16px;
  }
  
  #ds-lp--prod-info-box .ds-lp-gallery-arrow--next {
    right: 16px;
  }
  
  #ds-lp--prod-info-box .ds-lp-gallery-arrow svg {
    width: 48px;
    height: 48px;
    display: block;
  }
  
  #ds-lp--prod-info-box .ds-lp-gallery-arrow[disabled] {
    opacity: 0.3;
    cursor: not-allowed;
    pointer-events: none;
  }
  
  @media (min-width: 750px) {
    #ds-lp--prod-info-box .ds-lp-gallery-arrow {
      width: 56px;
      height: 56px;
    }
    
    #ds-lp--prod-info-box .ds-lp-gallery-arrow--prev {
      left: 24px;
    }
    
    #ds-lp--prod-info-box .ds-lp-gallery-arrow--next {
      right: 24px;
    }
    
    #ds-lp--prod-info-box .ds-lp-gallery-arrow svg {
      width: 56px;
      height: 56px;
    }
  }
  
  /* Thumbnail sizes and spacing */
  #ds-lp--prod-info-box .thumbnail-slider {
    padding-left: 0 !important;
    padding-right: 0 !important;
  }
  
  #ds-lp--prod-info-box .thumbnail-list {
    gap: 8px !important;
    padding-left: 0 !important;
    padding-right: 0 !important;
  }
  
  /* #ds-lp--prod-info-box .thumbnail-list__item {
    width: 60px !important;
    height: 60px !important;
  }
  
  #ds-lp--prod-info-box .thumbnail-list__item img {
    width: 60px !important;
    height: 60px !important;
    object-fit: contain;
  } */
  
  @media (min-width: 750px) {
    #ds-lp--prod-info-box .product__media-item {
      display: none;
    }
    
    #ds-lp--prod-info-box .product__media-item.is-active {
      display: block;
    }
    
    /* Thumbnail sizes and spacing - Desktop */
    #ds-lp--prod-info-box .thumbnail-list {
      gap: 16px !important;
    }
    
    /* #ds-lp--prod-info-box .thumbnail-list__item {
      width: 110px !important;
      height: 110px !important;
    }
    
    #ds-lp--prod-info-box .thumbnail-list__item img {
      width: 110px !important;
      height: 110px !important;
    } */
  }
  
  .ds-lp-prod-info-box__rating {
    display: flex;
    align-items: center;
    gap: 8px;
  }
  
  .ds-lp-prod-info-box__stars {
    display: flex;
    gap: 4px;
  }
  
  .ds-lp-prod-info-box__star {
    width: 20px;
    height: 20px;
    color: #FFD700;
  }
  
  .ds-lp-prod-info-box__price-highlight {
    color: #E4FF52;
  }
  
  .ds-lp-prod-info-box__offer-first-part {
    color: #E4FF52;
    font-weight: 700;
  }
  
  .ds-lp-prod-info-box__includes-item {
    display: flex;
    align-items: center;
    gap: 12px;
  }
  
  .ds-lp-prod-info-box__checkmark {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
    color: #E74639;
  }
  
  .ds-lp-prod-info-box__cta-button {
    background: #E4FF52;
    color: #000000;
    font-weight: 700;
    padding: 12px 24px;
    border-radius: 100px;
    text-align: center;
    display: block;
    width: 100%;
    transition: all 0.3s ease;
    text-decoration: none;
  }
  
  
  .ds-lp-prod-info-box__tabs {
    display: flex;
    gap: 24px;
    margin-top: 24px;
    overflow-x: auto;
    white-space: nowrap;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none; /* Firefox */
    -ms-overflow-style: none; /* IE and Edge */
  }
  
  .ds-lp-prod-info-box__tabs::-webkit-scrollbar {
    display: none; /* Chrome, Safari, Opera */
  }
  
  .ds-lp-prod-info-box__tab {
    padding: 8px 0;
    cursor: pointer;
    color: #FFFFFF;
    opacity: 0.5;
    border-bottom: 2px solid transparent;
    transition: all 0.3s ease;
    font-size: 18px;
    line-height: 1.5;
    letter-spacing: -0.9px;
    font-weight: 400;
    white-space: nowrap;
    flex-shrink: 0;

  }
  
  .ds-lp-prod-info-box__tab.active {
    color: #FFFFFF;
    border-bottom-color: #FFFFFF;
    opacity: 1;
    font-weight: 700;
  }
  
  .ds-lp-prod-info-box__tab-content {
    display: none;
    padding-top: 24px;
  }
  
  .ds-lp-prod-info-box__tab-content.active {
    display: block;
  }
</style>

