<script>


$(document).ready(function(){
  $('.slick--social-proof').slick({
    infinite: true,
    centerMode: true,
    speed: 300,
    slidesToShow: 1,
    slidesToScroll: 1,
    dots: true,      
    arrows: false,   
    mobileFirst: true,
    responsive: [
        {
            breakpoint: 1024,
            settings: {
                slidesToShow: 3,
                slidesToScroll: 1,
                infinite: false,
                centerMode:false,
                dots: false // Disable dots on large screens (if required)
            }
        }
    ]
  });
});


</script>







