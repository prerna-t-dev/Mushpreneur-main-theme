
<style>


    .slick--social-proof {
        width: 100%;
        /* overflow-x: hidden; */
        padding-bottom: 30px;
        /* overflow-y: visible; */
        overflow: visible;
        /* clip-path: inset(0px 0px -10px 0px); */
    }


    


    .slick--social-proof .slick-list{
        overflow: visible;
    }

    .slick--social-proof .slick-track
    {
        display: flex !important;
    }

    .slick--social-proof .slick-list .slick-slide{
        padding: 0 16px;
        height: inherit !important;
    }

    /* Pagination dots for Slick */
    .slick-dots{
        display: flex;
        justify-content:center ;
        margin-top: 10px !important;
    }
    .slick-dots li button {
        background-color: #ccc; 
        border-radius: 50%;     
        width: 10px;
        height: 10px;
        margin: 0 5px;         
        padding: 0; 
        font-size: 0px !important;            
    }

    .slick-dots li.slick-active button {
        background-color: #E74936; 
    }


    .slick-dots {
        margin-top: 20px;
        text-align: center;
        position: relative;
        z-index: 10;
    }



    @media (max-width:1024px ) {
        /* .slick--social-proof{
            padding-left: 15% !important;
            padding-right: 15% !important;
            padding-bottom: 18px;
        } */

        .slick--social-proof .slick-list .slick-slide{
            padding: 0 10px;
            height: inherit !important;
        }
        
    }


</style>

