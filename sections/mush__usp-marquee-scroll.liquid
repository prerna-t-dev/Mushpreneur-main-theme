    {
        "name": "USP Marquee Scroll",
        "class": "section--usp-marquee-scroll",
        "settings": [

        ],
        "blocks": [
            {
                "name": "USP",
                "type": "usp",
                "settings": [
                    {
                        "type": "text",
                        "id": "usp",
                        "label": "USP"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "USP Marquee Scroll"
            }
        ]
    } 
{% endschema %}