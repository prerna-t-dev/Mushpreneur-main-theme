{% comment %}
  Day Shrooms Landing Page - What is Day Shrooms Section
{% endcomment %}

<style>
  .ds-lp-what-is {
    background: linear-gradient(180deg, #FDF1E9 0%, #F9C9A7 100%);
    position: relative;
  }
  
  .ds-lp-what-is__headline {
    color: {{ section.settings.headline_color | default: '#000000' }};
  }
  
  .ds-lp-what-is__intro-text {
    color: {{ section.settings.intro_text_color | default: '#000000' }};
  }
  
  .ds-lp-what-is__description {
    color: {{ section.settings.description_color | default: '#000000' }};
  }
  
  .ds-lp-what-is__feature-item {
    background-color: {{ section.settings.feature_bg_color | default: '#ffffff' }};
    color: {{ section.settings.feature_text_color | default: '#000000' }};
  }
  
  .ds-lp-what-is__checkmark {
    background-color: {{ section.settings.checkmark_bg_color | default: '#F14D55' }};
    color: {{ section.settings.checkmark_color | default: '#ffffff' }};
  }
  
  .ds-lp-what-is__image-wrapper {
    position: relative;
    width: 100%;
    min-height: 300px;
  }
  
  .ds-lp-what-is__image {
    position: absolute !important;
    width: {{ section.settings.image_mobile_width | default: 200 }}px !important;
    left: {{ section.settings.image_mobile_left | default: 0 }}px !important;
    bottom: {{ section.settings.image_mobile_bottom | default: 0 }}px !important;
    height: auto;
    object-fit: cover;
    z-index: 1;
  }
  
  @media (min-width: 1024px) {
    .ds-lp-what-is__image-wrapper {
      min-height: 400px;
    }
    
    .ds-lp-what-is__image {
      width: {{ section.settings.image_desktop_width | default: 300 }}px !important;
      left: {{ section.settings.image_desktop_left | default: 0 }}px !important;
      bottom: {{ section.settings.image_desktop_bottom | default: 0 }}px !important;
    }
  }
</style>

<section class="ds-lp-what-is" id="ds-lp--what-is-day-shrooms">
  <div class="mx-auto px-5 sm:px-6 lg:px-16 py-12 pb-24 lg:py-20 3xl:pb-60">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 lg:gap-30 items-start">
      {% comment %} Left Column - Headline Only {% endcomment %}
      <div class="">
        <div class="ds-lp-what-is__headline text-[48px] lg:text-[80px] font-bold leading-[1.1] tracking-[-1.2px] lg:tracking-[-2px]">
          {% if section.settings.headline != blank %}
            {{ section.settings.headline }}
          {% else %}
            <h2>What is Day Shrooms?</h2>
          {% endif %}
        </div>
      </div>
      
      {% comment %} Right Column - Content and Image {% endcomment %}
      <div class="">
        <p class="ds-lp-what-is__intro-text text-lg lg:text-xl font-bold leading-[1.5] tracking-[-0.8px] lg:tracking-[-1px]">
          {{ section.settings.intro_text | default: "Not a coffee. Not an energy drink." }}
        </p>
        
        <p class="ds-lp-what-is__description text-lg lg:text-xl leading-[1.5] tracking-[-0.8px] lg:tracking-[-1px] mb-8">
          {{ section.settings.description | default: "It's the smarter blend built for modern minds. Day Shrooms is a cacao-based powerhouse stacked with functional mushrooms, adaptogens, and nootropics, crafted to fuel focus, boost energy, and support mental clarity without the crash, anxiety, or artificial hacks." }}
        </p>
        
        {% comment %} Features List {% endcomment %}
        {% if section.blocks.size > 0 %}
          <div class="flex flex-wrap gap-4">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'feature' %}
                  <div class="ds-lp-what-is__feature-item flex items-center gap-2 px-2 py-2 pr-4 rounded-full">
                    <div class="ds-lp-what-is__checkmark flex-shrink-0 w-6 h-6 lg:w-7 lg:h-7 rounded-full flex items-center justify-center">
                      <svg class="w-4 h-4 lg:w-5 lg:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                    </div>
                    <p class="ds-lp-what-is__feature-item text-sm lg:text-base font-medium leading-[1.5] tracking-[-0.6px] lg:tracking-[-0.7px]">
                      {{ block.settings.feature_text }}
                    </p>
                  </div>
              {% endcase %}
            {% endfor %}
          </div>
        {% endif %}
        
        {% comment %} Image {% endcomment %}
        {% if section.settings.section_image != blank %}
          <img 
            src="{{ section.settings.section_image | image_url }}"
            alt="{{ section.settings.section_image.alt | default: section.settings.headline }}"
            class="ds-lp-what-is__image"
            width="{{ section.settings.image_desktop_width | default: 300 }}"
            height="auto"
            loading="lazy"
          >
        {% else %}
          <div class="ds-lp-what-is__image-wrapper bg-gray-200 flex items-center justify-center">
            <p class="text-gray-400">Section Image</p>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

